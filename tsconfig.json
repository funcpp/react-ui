{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "declaration": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
